generator client {
  provider               = "prisma-client"
  output                 = "../generated/prisma"
  moduleFormat           = "esm"
  generatedFileExtension = "ts"
  importFileExtension    = "ts"
}

datasource db {
  provider = "mysql"
}

model User {
  id            String         @id @default(cuid())
  email         String         @unique
  phone         String?        @unique
  username      String
  password      String
  avatar        String?
  work          String?
  role          Role           @default(USER) // USER ADMIN ROOT VISITOR
  createdAt     DateTime       @default(now())
  updateAt      DateTime       @updatedAt
  Blog          Blog[]
  Tag           Tag[]
  Todo          Todo[]
  sessions      Session[]
  blogLikes     BlogLike[]
  blogFavorites BlogFavorite[]

  @@map("users")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expires      DateTime

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@id([identifier, token])
  @@map("verification_tokens")
}

model Blog {
  id        Int           @id @default(autoincrement())
  authorId  String
  author    User          @relation(fields: [authorId], references: [id], onDelete: Cascade)
  title     String
  content   String        @db.LongText
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  delete    Boolean       @default(false)
  tags      TagsOnBlogs[]

  likeCount     Int @default(0)
  favoriteCount Int @default(0)

  likes     BlogLike[]
  favorites BlogFavorite[]
}

model Tag {
  id        Int           @id @default(autoincrement())
  content   String        @unique
  color     String
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  userId    String
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  todos     TagsOnTodos[]
  blogs     TagsOnBlogs[]

  @@unique([userId, content])
}

model Todo {
  id         Int           @id @default(autoincrement())
  content    String
  finished   Boolean       @default(false)
  createAt   DateTime      @default(now())
  updateAt   DateTime      @updatedAt
  finishedAt DateTime      @updatedAt
  delete     Boolean       @default(false)
  userId     String
  user       User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  tags       TagsOnTodos[]
}

model TagsOnTodos {
  todo       Todo     @relation(fields: [todoId], references: [id])
  todoId     Int
  tag        Tag      @relation(fields: [tagId], references: [id])
  tagId      Int
  assignedAt DateTime @default(now())
  assignedBy String

  @@id([todoId, tagId])
}

model TagsOnBlogs {
  blog       Blog     @relation(fields: [blogId], references: [id])
  blogId     Int
  tag        Tag      @relation(fields: [tagId], references: [id])
  tagId      Int
  assignedAt DateTime @default(now())
  assignedBy String

  @@id([blogId, tagId])
}

enum Role {
  USER
  ADMIN
  ROOT
  VISITOR
}

model BlogLike {
  id String @id @default(cuid())

  blogId Int
  userId String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  blog Blog @relation(fields: [blogId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([blogId, userId])
  @@index([userId])
  @@index([blogId])
}

model BlogFavorite {
  id String @id @default(cuid())

  blogId Int
  userId String

  blog Blog @relation(fields: [blogId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([blogId, userId])
  @@index([userId])
  @@index([blogId])
}
